<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ExpenseTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*<link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/20.4.38/material.css" />*@
    <link href="https://cdn.syncfusion.com/ej2/20.4.38/bootstrap5.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpenseTracker.styles.css" asp-append-version="true" />
    <script src="https://cdn.syncfusion.com/ej2/20.4.38/dist/ej2.min.js"></script>
</head>
<body class="e-bigger">
    <partial name="_sidebar" />
    <header>
        <nav class="navbar sticky-top bg-body-tertiary">
            <div class="container-fluid">    
            </div>
        </nav>
    </header>
    <div class="main-content">
      <div role="main" class="pb-3">
            <div class="col-md-8 offset-md-2">
                    <div class="row">
                        <div class="col-md-7">
                            <div class="d-flex flex-column mb-5">
                                <div class="d-flex mb-1">
                                    <div class="flex-grow-1">
                                            <h3 class="fw-bold">@ViewData["PageTitle"]</h3>
                                        </div>
                                            @if (ViewData["PageActionText"] != null)
                                                    {
                                    <a class="btn" id="Create" href="@ViewData["PageActionUrl"]">
                                                            @ViewData["PageActionText"]
                                                        </a>
                                                    }
                                            <div>
                                      </div>
                                </div>
                                   @*breadcrumb*@
                            </div>

                        </div>
                    </div>


                            @RenderBody()
                </div>


         
           
      </div>
       
 </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <ejs-scripts></ejs-scripts>
</body>
</html>
